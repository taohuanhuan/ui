<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/no_color"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/actionsheet_top_normal"
        android:gravity="center"
        android:text="现金优惠券"
        android:textColor="#d9923c"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="300dp"
        android:background="@drawable/actionsheet_bottom_selector"
        android:gravity="center"
         >
            <TextView
                android:id="@+id/send"
                android:text="打赏"
                android:background="@drawable/shape_bg_iuv_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center"
                android:textColor="@color/iuv_txt_title"
                android:textSize="18sp"/>
        <app.cn.aiyouv.www.widget.PullToRefreshView
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/iuv_txt_title"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/tickte_lists"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/no_color"
                android:cacheColorHint="@color/no_color"
                android:divider="@color/normal_diver"
                android:dividerHeight="5dp" />
        </app.cn.aiyouv.www.widget.PullToRefreshView>
        </LinearLayout>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/actionsheet_single_selector"
        android:gravity="center"
        android:text="取消"
        android:textColor="#d9923c"
        android:textSize="16sp" />

</LinearLayout>