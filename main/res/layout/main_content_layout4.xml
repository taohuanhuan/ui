<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/iuv">

        <LinearLayout
            android:id="@+id/title_top_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:visibility="invisible">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"

                android:background="@drawable/title_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/center_tip"
            style="@style/main_top_middle_text"
            android:text="个人中心" />
    </RelativeLayout>

    <app.cn.aiyouv.www.widget.PagerScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <app.cn.aiyouv.www.widget.CircleImageView
                        android:id="@+id/content4_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/fs_ico"
                        app:border_color="@color/iuv"
                        app:border_width="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginRight="30dp"
                        android:id="@+id/vip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/no_vip" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/content4_item0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="昵称"
                                android:textColor="@color/default_text"
                                android:textSize="23sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/content4_item1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/content4_item0_txt"
                                android:textColor="@color/iuv_txt_normal"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/dianzan"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@drawable/item4_ico_0" />

                            <TextView
                                android:id="@+id/content4_item2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="20"
                                android:textColor="@color/iuv_txt_normal"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/guanzhu"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@drawable/item4_ico_2" />

                            <TextView
                                android:id="@+id/content4_item3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="20"
                                android:textColor="@color/iuv_txt_normal"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/seperator_thin" />

            <RelativeLayout
                android:id="@+id/layout50"
                style="@style/layout4_content_item">

                <TextView
                    style="@style/layout4_content_item_text"
                    android:text="我的账单" />

                <ImageView
                    style="@style/layout4_content_item_image"
                    android:background="@drawable/content4_item1" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/seperator_thin" />

            <RelativeLayout
                android:id="@+id/layout51"
                style="@style/layout4_content_item">

                <TextView

                    style="@style/layout4_content_item_text"
                    android:text="商户数据分析" />

                <ImageView
                    style="@style/layout4_content_item_image"
                    android:background="@drawable/content4_item2" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/seperator_thin" />

            <RelativeLayout
                android:id="@+id/layout52"
                style="@style/layout4_content_item">

                <TextView
                    style="@style/layout4_content_item_text"
                    android:text="打赏" />

                <ImageView
                    style="@style/layout4_content_item_image"
                    android:background="@drawable/content4_item3" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/seperator_thin" />

            <RelativeLayout
                android:id="@+id/layout41"
                style="@style/layout4_content_item">

                <TextView
                    style="@style/layout4_content_item_text"
                    android:text="我的券包" />

                <ImageView
                    style="@style/layout4_content_item_image"
                    android:background="@drawable/content4_item4" />
            </RelativeLayout>

            <View
                android:id="@+id/view_0"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/seperator_thin" />

            <RelativeLayout
                android:id="@+id/layout47"
                style="@style/layout4_content_item">

                <TextView

                    style="@style/layout4_content_item_text"
                    android:text="券包回收站" />

                <ImageView
                    style="@style/layout4_content_item_image"
                    android:background="@drawable/content4_item5" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/seperator_thin" />

            <RelativeLayout
                android:id="@+id/layout42"
                style="@style/layout4_content_item">

                <TextView
                    style="@style/layout4_content_item_text"
                    android:text="记账本" />

                <ImageView
                    style="@style/layout4_content_item_image"
                    android:background="@drawable/content4_item6" />
            </RelativeLayout>

            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/seperator_thin" />

            <RelativeLayout
                android:id="@+id/layout43"
                style="@style/layout4_content_item">

                <TextView
                    style="@style/layout4_content_item_text"
                    android:text="我的分享" />

                <ImageView
                    style="@style/layout4_content_item_image"
                    android:background="@drawable/content4_item7" />
            </RelativeLayout>

            <View
                android:id="@+id/view_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/seperator_thin" />

            <RelativeLayout
                android:id="@+id/layout46"
                style="@style/layout4_content_item">

                <TextView

                    style="@style/layout4_content_item_text"
                    android:text="我的粉丝" />

                <ImageView
                    style="@style/layout4_content_item_image"
                    android:background="@drawable/content4_item8" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/seperator_thin" />

            <RelativeLayout
                android:id="@+id/layout44"
                style="@style/layout4_content_item">

                <TextView

                    style="@style/layout4_content_item_text"
                    android:text="我的二维码" />

                <ImageView
                    style="@style/layout4_content_item_image"
                    android:background="@drawable/content4_item9" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/seperator_thin" />

            <RelativeLayout
                android:id="@+id/layout49"
                style="@style/layout4_content_item">

                <TextView
                    style="@style/layout4_content_item_text"

                    android:text="消息列表" />

                <ImageView
                    style="@style/layout4_content_item_image"
                    android:background="@drawable/content4_item10" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/seperator_thin" />

            <RelativeLayout
                android:id="@+id/layout45"
                style="@style/layout4_content_item">

                <TextView
                    style="@style/layout4_content_item_text"
                    android:text="设置" />

                <ImageView
                    style="@style/layout4_content_item_image"
                    android:background="@drawable/content4_item11" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/seperator_thin" />
        </LinearLayout>
    </app.cn.aiyouv.www.widget.PagerScrollView>

</LinearLayout>