<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/iuv" >

        <LinearLayout
            android:id="@+id/title_top_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/title_back"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/cate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="找回密码"
            android:textColor="@color/iuv_txt_title"
            android:textSize="22sp" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center" >

            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/iuv_bg"
        android:padding="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_item">
                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/item_text"
                    android:text="手机号"/>
                <EditText
                    android:id="@+id/register_item0"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/item_text"
                    android:textSize="15sp"
                    android:digits="0123456789"
                    android:textCursorDrawable="@drawable/cur"
                    android:background="@color/no_color"
                    android:gravity="left|center_vertical"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/login_item">
                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/item_text"
                    android:textSize="16sp"
                    android:text="验证码"/>
                <EditText
                    android:id="@+id/register_item1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/item_text"
                    android:textSize="15sp"
                    android:background="@color/no_color"
                    android:textCursorDrawable="@drawable/cur"
                    android:gravity="left|center_vertical"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/register_item2"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="@color/iuv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发送验证码"
                    android:ems="6"
                    android:layout_marginRight="4dp"
                    android:padding="4dp"
                    android:textColor="@color/subscribe_item_normal_bg"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:visibility="invisible"
                android:background="@drawable/login_item">
                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/item_text"
                    android:text="密码"/>
                <EditText
                    android:id="@+id/register_item4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:password="true"
                    android:textColor="@color/item_text"
                    android:textSize="15sp"
                    android:background="@color/no_color"
                    android:textCursorDrawable="@drawable/cur"
                    android:gravity="left|center_vertical"
                    android:layout_height="match_parent" />

            </LinearLayout>
    </LinearLayout>
        <Button
            android:id="@+id/register_item5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/subscribe_item_drag_bg"
            android:gravity="center"
            android:textSize="15sp"
            android:text="提交"
            android:layout_marginTop="20dp"
            android:padding="6dp"
            android:background="@color/iuv"/>
        </LinearLayout>
</LinearLayout>